@{
    ViewBag.Title = "Quản lý loại hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nhập tên loại hàng cần tìm" antifocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus" style="margin-right: 5px; vertical-align: middle;"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị kết quả tìm kiếm -->
        <p style="margin: 10px 0 10px 0">
            Có <b> 10</b> loại hàng trong tổng số <b>1</b> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên loại hàng</th>
                        <th>Mô tả</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <tr>
                            <td>Bàn ghế - đồ nội thất</td>
                            <td>Bàn ghế, trang thiết bị nội thất</td>
                            <td>
                                <a href="~/Category/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a href="~/Category/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        @* <div class="text-center">
        <ul class="pagination">
        <li><a href="#">1</a></li>
        <li class="active"><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        </ul>
        </div> *@
    </div>
</div>