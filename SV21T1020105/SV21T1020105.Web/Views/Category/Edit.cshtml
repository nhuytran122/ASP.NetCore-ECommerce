@model Category
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />
            
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" autofocus name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
            </div>

            <div class="form-group">
                <label>Hình ảnh:</label>
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />

                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('PhotoPreview').src = window.URL.createObjectURL(this.files[0])" />
                
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="PhotoPreview" src="@(string.IsNullOrWhiteSpace(Model.Photo) ? Url.Content("~/images/products/no-image.jpg") : Url.Content("~/images/categories/" + Model.Photo))"
                         class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>
