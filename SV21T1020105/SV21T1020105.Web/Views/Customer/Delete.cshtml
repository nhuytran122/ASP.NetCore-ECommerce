@{
    ViewBag.Title = "Xoá khách hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form>
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <p class="form-control-static form-control">Trần Như Ý</p>
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static form-control">GD01</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static form-control">0123456789</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-control">nhuytran@gmail.com</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-control">Quảng Điền</p>
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                <p class="form-control-static form-control">Thừa Thiên Huế</p>
            </div>

            <div class="checkbox">
                <p class="form-control-static form-control">Tài khoản đang hoạt động</p>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i>
                    Xóa dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>
