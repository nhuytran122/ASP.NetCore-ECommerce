@{
    ViewBag.Title = "Quản lý nhân viên";
}

<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nhập tên nhân viên cần tìm" antifocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Emloyee/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus" style="margin-right: 5px; vertical-align: middle;"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị kết quả tìm kiếm -->
        <p style="margin: 10px 0 10px 0">
            Có <b> 30</b> nhân viên trong tổng số <b>2</b> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên nhân viên</th>
                        <th>Ngày sinh</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Ảnh</th>
                        <th style="width:120px">Đang làm việc?</th>
                        <th style="width:80px"></th>
                    </tr>

                </thead>

                <tbody>
                    @for (int i = 1; i <= 15; i++)
                    {
                        <tr>
                            <td>Trần Như Ý</td>
                            <td>12/02/2003</td>
                            <td>0123456789</td>
                            <td>21t1020105@husc.edu.vn</td>
                            <td>77  Nguyễn Huệ</td>
                            <td><img src="path/to/image" alt="Ảnh" /></td>
                            <td><i class="fa fa-check" aria-hidden="true"></i></td>
                            <td>
                                <a href="~/Employee/Edit/123" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a href="~/Employee/Delete/123" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>
    </div>
</div>