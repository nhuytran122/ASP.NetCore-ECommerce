@model IEnumerable<Supplier>
@{
    ViewBag.Title = "Quản lý nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier" method="get">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nhập tên nhà cung cấp cần tìm"
                       name="searchValue" value="@ViewBag.SearchValue"
                antifocus />
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus" style="margin-right: 5px; vertical-align: middle;"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị kết quả tìm kiếm -->
        <p style="margin: 10px 0 10px 0">
            Có <b> @ViewBag.RowCount</b> nhà cung cấp trong tổng số <b>@ViewBag.PageCount</b> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên nhà cung cấp</th>
                        <th>Tên giao dịch</th>
                        <th>Điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Tỉnh thành</th>
                        <th style="width:80px"></th>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SupplierName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>@item.Province</td>
                            <td>
                                <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>
                                </a>

                                <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="~/Supplier?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>