@{
    ViewBag.Title = "Tài khoản của tôi";
    var customer = ViewBag.Customer;
}

<div class="py-5">
</div>
<div class="container py-5">
    <div class="row">
        @{
            await Html.RenderPartialAsync("_SidebarProfile");
        }

        <div class="col-md-9 mt-3">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="m-0">Tài khoản của tôi</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Cột hiển thị thông tin -->
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h6 class="text-muted"><i class="bi bi-person me-2"></i> Tên:</h6>
                                <p class="fs-5">@customer.CustomerName</p>
                            </div>
                            <div class="mb-4">
                                <h6 class="text-muted"><i class="bi bi-envelope me-2"></i> Email:</h6>
                                <p class="fs-5">@customer.Email</p>
                            </div>
                            <div class="mb-4">
                                <h6 class="text-muted"><i class="bi bi-telephone me-2"></i> Số điện thoại:</h6>
                                <p class="fs-5">@customer.Phone</p>
                            </div>
                            <div class="mb-4">
                                <h6 class="text-muted"><i class="bi bi-geo-alt me-2"></i> Tỉnh thành:</h6>
                                <p class="fs-5">@customer.Province</p>
                            </div>
                            <div class="mb-4">
                                <h6 class="text-muted"><i class="bi bi-house-door me-2"></i> Địa chỉ:</h6>
                                <p class="fs-5">@customer.Address</p>
                            </div>
                        </div>

                        <!-- Cột hiển thị ảnh đại diện -->
                        <div class="col-md-4 text-center">
                            <img id="PhotoPreview"
                                 src="@(WebConfig.IMAGE_SOURE_HOST + "/images/customers/" + (string.IsNullOrWhiteSpace(customer.Photo) ? "default-avatar.jpg" : customer.Photo))"
                                 class="rounded-circle mb-3"
                                 style="width:150px; height:150px; object-fit:cover;" />
                            <h6 class="mt-3">Ảnh đại diện</h6>
                        </div>
                    </div>
                </div>
                <div class="text-center mb-4">
                    <a href="~/Profile/Edit" class="btn btn-warning">
                        <i class="fa fa-edit me-2"></i> Chỉnh sửa thông tin
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>