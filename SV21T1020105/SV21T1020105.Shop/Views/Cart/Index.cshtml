@model IEnumerable<CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
}
<div class="pt-5">
</div>

@if (Model.Count() > 0)
{
    <div class="container-fluid pt-5" id="shoppingCart">

    </div>
}
else
{
    await Html.RenderPartialAsync("_EmptyCart");
}
@section scripts {
    <script>
        $(document).ready(function () {
            showShoppingCart();

        });

        function showShoppingCart() {
            $.ajax({
                url: "Cart/ShoppingCart",
                type: 'GET',
                success: function (data) {
                    updateCartCount();
                    $('#shoppingCart').html(data);
                }
            });
        }
    </script>
}
