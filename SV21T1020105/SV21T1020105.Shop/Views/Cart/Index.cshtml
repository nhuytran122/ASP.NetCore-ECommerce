@model IEnumerable<CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    decimal sumOfPrice = 0;
}
<div class="py-5">
</div>

<!-- Cart Page Start -->
<div class="container-fluid py-5" id="shoppingCart">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Đơn Giá</th>
                        <th scope="col">Số Lượng</th>
                        <th scope="col">Số Tiền</th>
                        <th scope="col">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.Count() > 0){
                        @foreach (var item in Model)
                        {
                            sumOfPrice += item.TotalPrice;
                            <tr>
                                <th scope="row">
                                    <div class="d-flex align-items-center">
                                        <img style="width:80px;height: 80px;" src="@WebConfig.IMAGE_SOURE_HOST/images/products/@(string.IsNullOrWhiteSpace(item.Photo) ? "no-image.jpg" : item.Photo)" class="img-fluid me-5 rounded-circle">
                                    </div>
                                </th>
                                <td>
                                    <a href="~/Product/Details/@item.ProductID">
                                        <p class="mb-0 mt-4">@item.ProductName</p>
                                     </a>
                                </td>
                                <td>
                                        <p class="mb-0 mt-4">@item.SalePrice.ToString("N0") đ</p>
                                </td>
                                <td>
                                    <div class="input-group quantity mt-4" style="width: 100px;">
                                        <input class="form-control text-center form-control-sm text-center border-1" type="number" value="@item.Quantity" min="1" name="Quantity" />
                                    </div>
                                </td>
                                <td>
                                        <p class="mb-0 mt-4">@item.TotalPrice.ToString("N0")</p>
                                </td>
                                <td>
                                    <a href="~/Cart/RemoveFromCart/@item.ProductID" data-product-name="@item.ProductName" class="btn btn-md rounded-circle bg-light border mt-4
                                        ajax-link">
                                        <i class="fa fa-times text-danger"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                    <tr>
                        <td colspan="7" class="text-center py-3">
                            <p>Giỏ hàng trống</p>
                        </td>
                    </tr>
                    }
                </tbody>

                <tfoot>
                    <tr>
                        <th colspan="5" class="text-right">Tổng cộng:</th>
                        <th class="text-right">@sumOfPrice.ToString("N0")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>

            <div class="text-right">
                <a href="~/Cart/ClearCart" class="btn btn-sm btn-danger ajax-link">
                    <i class="fa fa-trash"></i> Xóa giỏ hàng
                </a>
            </div>
        </div>
        <div class="mt-5">
            <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Coupon Code">
            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">Apply Coupon</button>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0">@sumOfPrice.ToString("N0") đ</p>
                        </div>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4">@sumOfPrice.ToString("N0") đ</p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->
@section scripts {
    <script>
        $(document).ready(function () {
            $(".ajax-link").click(function (e) {
                e.preventDefault();

                var productName = $(this).data('product-name');
                var confirmDelete = false;

                if ($(this).attr('href').includes('RemoveFromCart')) {
                    confirmDelete = confirm('Xóa mặt hàng ' + productName + ' ra khỏi giỏ hàng?');
                } else if ($(this).attr('href').includes('ClearCart')) {
                    confirmDelete = confirm('Có muốn xóa giỏ hàng không?');
                }

                if (confirmDelete) {
                    $.ajax({
                        url: $(this).prop("href"),
                        type: "GET",
                        success: function (data) {
                            if (data !== "") {
                                alert(data);
                            } else {
                                updateCartCount();
                                showShoppingCart();
                            }
                        }
                    });
                }
            });
        });

        function showShoppingCart() {
            $.ajax({
                url: "~/Cart/Index",
                type: 'GET',
                success: function (data) {
                    $('#shoppingCart').html(data);
                }
            });
        }
    </script>
}
