@model Customer
@{
    ViewBag.Title = "Đăng ký";
}
<div class="py-5">
</div>
<div class="container my-5">
    <div class="row w-100">
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
            <h2 class="mb-4 display-3 text-primary text-center">NYT SHOP</h2>
            <h2 class="mb-4 text-secondary">100% Sản Phẩm Chính Hãng</h2>
            <h2 class="mb-4 text-secondary text-center">
                Chất lượng tuyệt vời<br />Giá cả hợp lý!
            </h2>
        </div>


        <div class="col-md-5">
            <div class="form-bg">
                <div class="form-container mt-3">
                    <div class="form-icon"><i class="bi bi-person-circle"></i></div>
                    <h3 class="title">Đăng ký</h3>
                    <form action="~/Account/Register" class="form-horizontal" method="post">
                        <div class="form-group">
                            <label>Tên</label> <span class="text-danger">*</span>
                            <input name="@nameof(Model.CustomerName)" class="form-control mt-2" type="text"
                                   value="@Model.CustomerName" autofocus />
                            @Html.ValidationMessage(nameof(Model.CustomerName))
                        </div>

                        <div class="form-group">
                            <label>Email</label> <span class="text-danger">*</span>
                            <input name="@nameof(Model.Email)" class="form-control mt-2" type="email"
                                   value="@Model.Email" />
                            @Html.ValidationMessage(nameof(Model.Email))
                        </div>

                        <div class="form-group">
                            <label>Số điện thoại</label> <span class="text-danger">*</span>
                            <input name="@nameof(Model.Phone)" class="form-control mt-2" type="text"
                                   value="@Model.Phone" />
                            @Html.ValidationMessage(nameof(Model.Phone))     
                        </div>

                        <div class="form-group">
                            <label>Địa chỉ</label> <span class="text-danger">*</span>
                            <input name="@nameof(Model.Address)" class="form-control mt-2" type="text"
                                   value="@Model.Address" />
                            @Html.ValidationMessage(nameof(Model.Address))
                        </div>

                        <div class="form-group">
                            <label>Tỉnh thành</label> <span class="text-danger">*</span>
                            <select name="@nameof(Model.Province)" class="form-control mt-2 select2">
                                <option value="">-- Chọn tỉnh thành --</option>
                                @foreach (var item in CommonDataService.ListOfProvinces())
                                {
                                    if (item.ProvinceName == Model.Province)
                                    {
                                        <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ProvinceName">@item.ProvinceName</option>
                                    }
                                }
                            </select>
                            @Html.ValidationMessage(nameof(Model.Province))
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label> <span class="text-danger">*</span>
                            <input name="@nameof(Model.Password)" class="form-control mt-2" type="password">
                            @Html.ValidationMessage(nameof(Model.Password))
                        </div>
                        <button name="btn-login" type="submit" class="btn btn-default mt-3">Đăng ký</button>
                    </form>

                    <p class="mt-4 text-center">
                        Đã có tài khoản?
                        <a href="~/Account/Login" class="text-primary fw-bold">Đăng nhập</a>
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link href="~/themes/css/login-style.css" rel="stylesheet">
}
